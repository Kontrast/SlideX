<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="author" content="Artsion Ponkratov">
    <link href="/Scripts/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="/Scripts/bootstrap/css/bootstrap-responsive.css" rel="stylesheet">
</head>
<body style="padding-top: 60px;">
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="#">SlideX</a>
                <div class="btn-inverse temp">
                    <ul class="nav">
                        <li>@Html.ActionLink(@SlideX.Localization.ViewPhrases.HomeLink, "Index", "Home")</li>
                        <li>@Html.ActionLink(@SlideX.Localization.ViewPhrases.AboutLink, "About", "Home")</li>
                        <li>@Html.ActionLink(@SlideX.Localization.ViewPhrases.SearchLink, "Index", "Search")</li>
                        @if (Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink(@SlideX.Localization.ViewPhrases.MyPresentationLink, "Index", "UserPresentation")</li>               
                        }
                        @if (User.IsInRole("AdminUser"))
                        {
                            <li>@Html.ActionLink(@SlideX.Localization.ViewPhrases.AdminPanelLink, "Index", "AdminPanel")</li>               
                        }
                    </ul>
                    @Html.Partial("_LogOnPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <section id="main">
            @RenderBody()
        </section>
    </div>
    <footer><div class = "navbar-fixed-bottom offset5  ">&copy; Artsiom Ponkratov, 2012</div>
        </footer>
    <script src="/Scripts/jquery-1.7.2.js" type="text/javascript"></script>
    <script src="/Scripts/bootstrap/js/bootstrap.js"></script>
    <script src="/Scripts/modernizr-1.7.min.js" type="text/javascript"></script>
    <script src="/Scripts/textExt1.3.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/Scripts/jqcloud-1.0.0.js"></script>
    @RenderSection("scripts", false)
    @RenderSection("tagCloud", false)
</body>
</html>
