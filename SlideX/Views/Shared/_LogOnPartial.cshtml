<ul class="nav pull-right">
    @if (Request.IsAuthenticated)
    {
        <li>  @Html.ActionLink(@SlideX.Localization.ViewPhrases.WelcomeLink + User.Identity.Name + "!", "Index", "Home")</li> 
        <li> @Html.ActionLink(@SlideX.Localization.ViewPhrases.LogOffLink, "LogOff", "Account")</li> 
        <li>@Html.ActionLink(@SlideX.Localization.ViewPhrases.ChangePassLink, "ChangePassword", "Account")</li> 
    }
    else
    {
        <li> @Html.ActionLink(@SlideX.Localization.ViewPhrases.LogOnLink, "LogOn", "Account")</li>
    }

    @if (Session["Culture"].ToString() == "ru")
    {
        <li> @Html.ActionLink("English", "ChangeCulture", "Account", new { lang = "en", returnUrl = Request.RawUrl }, null)</li>
    }
    else
    {
   <li> @Html.ActionLink("Русский", "ChangeCulture", "Account", new { lang = "ru", returnUrl = Request.RawUrl }, null) </li>
    }
</ul>
