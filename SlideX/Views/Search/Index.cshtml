@using SlideX.Models
@model SearchModel
@{
    ViewBag.Title = @SlideX.Localization.ViewPhrases.SearchTitile;
}
<h2>
    @SlideX.Localization.ViewPhrases.SearchTitile
</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="well form-search">
        @Html.EditorFor(model => model.SearchString)
        @Html.DropDownListFor(model => model.Type, Enum.GetValues(typeof(SearchType)).Cast<SearchType>().Select(v => new SelectListItem
               {
                   Text = v.ToString().Replace("_", " "),
                   Value = ((int)v).ToString()
               }), "[Search Type]")
        <input class="btn" type="submit" value=@SlideX.Localization.ViewPhrases.SearchButton />
    </div>
}
